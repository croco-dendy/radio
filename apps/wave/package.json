{
  "name": "@radio/wave",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "check-types": "tsc --noEmit",
    "lint": "biome lint --error-on-warnings ./src",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:push": "npx drizzle-kit push",
    "db:studio": "npx drizzle-kit studio",
    "db:test": "bun src/scripts/test-db.ts",
    "create-admin": "bun src/scripts/create-admin.ts",
    "check-users": "bun src/scripts/check-users.ts",
    "promote-admin": "bun src/scripts/promote-to-admin.ts",
    "admin": "bun src/scripts/interactive-admin.ts",
    "reset-password": "bun src/scripts/reset-password.ts",
    "cleanup-users": "bun src/scripts/cleanup-users.ts",
    "backup-db": "bun src/scripts/backup-db.ts",
    "rtmp": "./scripts/start-rtmp.sh",
    "telegram": "bun src/scripts/telegramStreamProcess.ts",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "telegram:start": "pm2 start ecosystem.config.js --only telegram-stream --env production",
    "telegram:stop": "pm2 stop telegram-stream",
    "telegram:restart": "pm2 restart telegram-stream",
    "telegram:status": "pm2 status telegram-stream",
    "telegram:logs": "pm2 logs telegram-stream",
    "telegram:monit": "pm2 monit telegram-stream"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@radio/types": "workspace:*",
    "@types/node-media-server": "^2.3.7",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.7.6",
    "node-media-server": "^4.0.18",
    "ws": "^8.18.2",
    "xml-js": "^1.6.11",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bun": "^1.2.9",
    "axios": "^1.8.4",
    "dotenv-cli": "^8.0.0"
  }
}
