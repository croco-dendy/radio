{
  "name": "radio",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:write": "turbo run lint:write",
    "test": "turbo run test",
    "prepare": "husky install",
    "wave:dev": "pnpm --filter @radio/wave dev",
    "player:dev": "pnpm --filter @radio/player dev",
    "admin:dev": "pnpm --filter @radio/admin dev",
    "wave:start": "pnpm --filter @radio/wave pm2:start",
    "wave:stop": "pnpm --filter @radio/wave pm2:stop",
    "wave:restart": "pnpm --filter @radio/wave pm2:restart",
    "wave:logs": "pnpm --filter @radio/wave pm2:logs",
    "wave:rtmp": "pnpm --filter @radio/wave rtmp"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/prompt-cli": "^19.5.0",
    "husky": "^9.1.6",
    "turbo": "^2.1.3"
  },
  "volta": {
    "node": "22.15.0",
    "bun": "1.2.9"
  }
}
